<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
  <meta name="generator" content="Hugo 0.88.1">
  <title>Checkout example Â· Bootstrap v5.1</title>
  <!-- Bootstrap core CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body class="bg-light">

  <div class="container">

    <div class="container-fluid">

      <div class="container">
        <!-- Title -->
        <div class="d-flex justify-content-between align-items-center py-3">
          <h2 class="h5 mb-0"><a href="#" class="text-muted"></a> Order #16123222</h2>
        </div>

        <!-- Main content -->
        <div class="row">
          <div class="col-lg-8">
            <!-- Details -->
            <div class="card mb-4">
              <div class="card-body">
                <div class="mb-3 d-flex justify-content-between">
                  <div>
                    <span class="me-3">19-04-2022</span>
                    <span class="me-3">#16123222</span>
                    <span class="me-3">Visa-1234</span>
                    <span class="badge rounded-pill bg-info">SHIPPING</span>
                  </div>
                  <div class="d-flex">
                    <button class="btn btn-link p-0 me-3 d-none d-lg-block btn-icon-text"><i class="bi bi-download"></i> <span class="text">Invoice</span></button>
                    <div class="dropdown">
                      <button class="btn btn-link p-0 text-muted" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-three-dots-vertical"></i>
                      </button>
                      <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#"><i class="bi bi-pencil"></i> Edit</a></li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-printer"></i> Print</a></li>
                      </ul>
                    </div>
                  </div>
                </div>
                <table class="table table-borderless">
                  <tbody>
                    <tr>
                      <td>
                        <div class="d-flex mb-2">
                          <div class="flex-shrink-0">
                            <img src="https://img.topchinasupplier.com/file/upload/2019/05/17/Custom-T-Shirts-100-Cotton-Men-Tshirt-Tee-Shirt-Printing-T-Shirt-Polo-T-Shirt-Shirts-for-Men-Plain-T-Shirt-Clothes.jpg" alt="" width="35" class="img-fluid">
                          </div>
                          <div class="flex-lg-grow-1 ms-3">
                            <h6 class="small mb-0"><a href="#" class="text-reset">T-shirt</a></h6>
                            <span class="small">Color: <%= shirtColor %></span>
                          </div>
                        </div>
                      </td>
                      <td>1</td>
                      <td class="text-end">$12.00</td>
                    </tr>
                    <tr>
                      <td>
                        <div class="d-flex mb-2">
                          <div class="flex-shrink-0">
                            <img src="https://cf.shopee.ph/file/c35dd3fdb6588770c7da8e19a84729cc" alt="" width="35" class="img-fluid">
                          </div>
                          <div class="flex-lg-grow-1 ms-3">
                            <h6 class="small mb-0"><a href="#" class="text-reset">Shorts</a></h6>
                            <span class="small">Color: <%= shortColor %></span>
                          </div>
                        </div>
                      </td>
                      <td>1</td>
                      <td class="text-end">$8.00</td>
                    </tr>
                    <tr>
                      <td>
                        <div class="d-flex mb-2">
                          <div class="flex-shrink-0">
                            <img src="https://m.media-amazon.com/images/I/61eh3PZTJcL._AC_SY450_.jpg" alt="" width="35" class="img-fluid">
                          </div>
                          <div class="flex-lg-grow-1 ms-3">
                            <h6 class="small mb-0"><a href="#" class="text-reset">Sun Glasses</a></h6>
                            <span class="small">Color: Black</span>
                          </div>
                        </div>
                      </td>
                      <td>1</td>
                      <td class="text-end">$5.00</td>
                    </tr>
                  </tbody>
                  <tfoot>
                    <tr>
                      <td colspan="2">Subtotal</td>
                      <td class="text-end">$25,00</td>
                    </tr>
                    <tr>
                      <td colspan="2">Shipping</td>
                      <td class="text-end">$20.00</td>
                    </tr>
                    <tr>
                      <td colspan="2">Discount (Code: NEWYEAR)</td>
                      <td class="text-danger text-end">-$5.00</td>
                    </tr>
                    <tr class="fw-bold">
                      <td colspan="2">TOTAL</td>
                      <td class="text-end">$40,00</td>
                    </tr>
                  </tfoot>
                </table>
              </div>
            </div>
            <!-- Payment -->
            <div class="card mb-4">
              <div class="card-body">
                <div class="row">
                  <div class="col-lg-6">
                    <h3 class="h6">Payment Method</h3>
                    <p>Visa <br>
                      Total: $40,00 <span class="badge bg-success rounded-pill">PAID</span></p>
                  </div>
                  <div class="col-lg-6">
                    <h3 class="h6">Billing address</h3>
                    <address>
                      <strong> <%= name %> <%= surname %>, <%= username %></strong><br>
                      <%= address %><br>
                      <%= city %>, <%= region %> <%= zip %><br>
                      <abbr title="Phone">P:</abbr> <%= phone %>
                    </address>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-4">
            <!-- Customer Notes -->
            <div class="card mb-4">
              <div class="card-body">
                <h3 class="h6">Customer Notes</h3>
                <ul>
                  <% for (let i=0; i<note.length; i++) { %>
                  <li> <%= note[i] %> </li>
                  <% } %>
                </ul>
              </div>
            </div>

            <div class="card mb-4">
              <!-- Shipping information -->
              <div class="card-body">
                <h3 class="h6">Shipping Information</h3>
                <strong>FedEx</strong>
                <span><a href="#" class="text-decoration-underline" target="_blank">FF1234567890</a> <i class="bi bi-box-arrow-up-right"></i> </span>
                <hr>
                <h3 class="h6">Address</h3>
                <address>
                  <strong> <%= name %> <%= surname %>, <%= username %> </strong><br>
                  <%= address %> <br>
                  <%= city %>, <%= region %> <%= zip %><br>
                  <abbr title="Phone">P:</abbr> <%= phone %>
                </address>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <footer class="my-5 pt-5 text-muted text-center text-small">
      <p class="mb-1">&copy; 2022 Astana IT University</p>
    </footer>
  </div>
</body>

</html>
